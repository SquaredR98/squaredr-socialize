{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,     // Allows for parsing the advance ECMAScript feature
        "sourceType": "module"   // Allows for the use of imports
    },
    "rules": {
        "semi": [2, "always"],
        "space-before-function-paren": [0, { "anonymous": "always", "named": "always"}],
        "camelcase": 0,
        "no-return-assign": 0,
        "quotes": ["error", "single"],
        "@typescript-eslint/no-null-assertion": "off",
        "@typescript-eslint/no-namesapce": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off"
    }
}
